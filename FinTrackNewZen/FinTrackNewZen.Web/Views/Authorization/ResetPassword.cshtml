@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";

}

<h4 class="text-center mb-4">Reset Password</h4>
<form id="resetPasswordForm" method="post" action="@Url.Action("ResetPassword", "Authorization")">
    <div class="mb-3">
        <label for="emailPhone" class="form-label">Email/Phone<span style="color:red">*</span></label>
        <input type="text" class="form-control" id="emailPhone" placeholder="Email or Phone" />
    </div>
    <div class="mb-3">
        <label for="newPassword" class="form-label">New Password<span style="color:red">*</span></label>
        <input type="password" class="form-control" id="newPassword" placeholder="New Password" required />
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password<span style="color:red">*</span></label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" required />
    </div>
    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
    <p class="text-center">
        <a href="@Url.Action("Login", "Authorization")">Back to Login</a>
    </p>
</form>

@section Scripts {
    <script src="~/js/reset-password.js"></script>
}