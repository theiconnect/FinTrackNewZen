@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h4 class="text-center mb-4">Forgot Password</h4>
<form id="forgotPasswordForm" method="post" action="@Url.Action("ForgotPassword", "Authorization")">
    <div class="mb-3">
        <label for="emailPhone" class="form-label">Email/Phone<span style="color:red">*</span></label>
        <input type="text" id="emailPhone" name="emailPhone" class="form-control" placeholder="Email or Phone" required />
    </div>
    <div class="d-grid mb-2">
        <button type="submit" class="btn btn-primary btn-block">Send OTP</button>
    </div>
    <p class="text-center mt-3">
        <a href="@Url.Action("Login", "Authorization")" class="btn btn-secondary">Back to Login</a>
    </p>
</form>

@section scripts {
    <script src="~/forgot-password.js"></script>
}