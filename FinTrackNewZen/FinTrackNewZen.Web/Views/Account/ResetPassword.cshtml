@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Reset Password";
}

<h4 class="text-center mb-4">Reset Password</h4>

<form method="post" action="/Account/Login">
    <div class="mb-3">
        <label>Enter Email or Phone</label>
        <input type="text" class="form-control bg-light" id="email" placeholder="example@email.com or 1234567890" required />
    </div>
    <div class="mb-3">
        <label>New Password</label>
        <input type="password" class="form-control" placeholder="Enter new password" required />
    </div>
    <div class="mb-3">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Confirm new password" required />
    </div>
    <button type="submit" class="btn btn-success w-100 mb-3">Reset Password</button>
    <div class="text-center mt-3">
        <a href="/Account/Login"> Back to Login</a>
    </div>
</form>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }