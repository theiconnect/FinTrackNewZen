@model FinTrackNewZen.Web.Models.UserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="text-center mt-2 mb-1">
        <h1 class="fw-bold text-primary heading-title">FinTrackNewZen</h1>
        <div class="container-fluid login-container">
            <div class="row">
                <div class="col-md-6 logo-section">
                    <img src="~/images/FinTrackNewzen%20Logo.jpg" class="logo-img" alt="FinTrackNewzen Logo" />

                </div>
                <div class="col-md-6 form-section">
                    <h2 class="text-center">Forgot Password</h2>
                    <form asp-action="ForgotPassword" method="post">
                        <input asp-for="EmailOrPhone" class="form-control" placeholder="Enter email or phone" />
                        <button class="btn btn-primary w-100 mt-3">Send OTP</button>
                    </form>
                </div>
            </div>
        </div>
</body>
</html>
