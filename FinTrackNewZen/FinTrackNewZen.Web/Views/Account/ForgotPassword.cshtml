@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Forgot Password";
}

<h4 class="text-center mb-4">Forgot Password</h4>

<form method="get" action="/Account/VerifyOtp">
    <div class="mb-3">
        <label>Enter Email or Phone</label>
        <input type="text" class="form-control" placeholder="Enter your email or phone" required />
    </div>
    <button type="submit" class="btn btn-warning w-100 mb-3">Send OTP</button>
    <div class="text-center mt-3">
        <a href="/Account/Login"> Back to Login</a>
    </div>
</form>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }