<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FinTrackNewZen</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/_LoginLayout.css" />
</head>
<body class="login-body">

    <main class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="login-wrapper d-flex flex-column bg-white shadow rounded-4 overflow-hidden p-0">

            <!-- Title inside the card -->
            <div class="text-center p-3 border-bottom">
                <h2 class="text-warning fw-bold mb-0">FinTrack NewZen</h2>
            </div>

            <!-- Main card content: logo and form side by side -->
            <div class="d-flex flex-row">
                <!-- Logo -->
                <div class="logo-container bg-light d-flex align-items-center justify-content-center p-4 border-end">
                    <img src="~/images/Fintracknewzen.jpeg" alt="Logo" class="img-fluid logo-img">
                </div>

                <!-- Form -->
                <div class="form-container p-4">
                    @RenderBody()
                </div>
            </div>

        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/_LoginLayout.js"></script>
    @RenderSection("Scripts", required: false)

   
</body>
</html>