<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/FederationLayout.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div>
            <a href="#" class="logo">
                <img src="/images/LogoFinTrackNewZen.jpeg" alt="FederationLogo">
            </a>
        </div>

        <div>
            <a href="#"><i class="bi bi-house"></i> Welcome <label>USERNAME</label></a>
        </div>

        <div class="menu-btn" onclick="toggleSubmenu('mastersMenu')">
            <i class="bi bi-safe"></i> Masters ▾
        </div>
        <div class="submenu" id="mastersMenu">
            <a href="@Url.Action("ViewFederation", "Federation")"><i class="bi bi-bank"></i> Federation</a>
            <a href="@Url.Action("Index", "Branch")"><i class="bi bi-layers-half"></i> Branches</a>
            <a href="@Url.Action("Index", "Group")"><i class="bi bi-people"></i> Groups</a>
            <a href="@Url.Action("Index", "Employee")"><i class="bi bi-person-check"></i> Employees</a>
        </div>

        <div class="menu-btn" onclick="toggleSubmenu('transactionsMenu')">
            <i class="bi bi-blockquote-right"></i> Transactions ▾
        </div>

        <div class="submenu" id="transactionsMenu">
            <a href="#"><i class="bi bi-bank"></i> Federation</a>
            <a href="#"><i class="bi bi-layers-half"></i> Branches</a>
            <a href="#"><i class="bi bi-people"></i> Groups</a>
            <a href="#"><i class="bi bi-person-check"></i> Employees</a>

        </div>



        <div class="menu-btn" onclick="toggleSubmenu('reportsMenu')">
            <i class="bi bi-graph-up"></i> Reports ▾
        </div>

        <div class="submenu" id="reportsMenu">
            <a href="#"><i class="bi bi-calendar2-event-fill"></i> Daily</a>
            <a href="#"><i class="bi bi-calendar2-minus-fill"></i> Weekly</a>
            <a href="#"><i class="bi bi-calendar2-fill"></i> Monthly</a>
            <a href="#"><i class="bi bi-calendar"></i> Yearly</a>
        </div>


        <div class="menu-btn" onclick="toggleSubmenu('settingsMenu')">
            <i class="bi bi-gear"></i> Settings ▾
        </div>

        <div class="submenu" id="settingsMenu">
            <a href="#"><i class="bi bi-person-circle"></i> Profile</a>
            <a href="#"><i class="bi bi-shield-lock"></i> Security</a>
        </div>


        <a href="@Url.Action("Login", "Authorization")"><i class="bi bi-box-arrow-left"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <!-- Header -->
        <div class="header">
            <button onclick="toggleSidebar()">☰</button>
            <div class="dropdown">
                <img src="https://i.pravatar.cc/100?img=3" class="rounded-img" onclick="toggleProfileDropdown()" />
                <div class="profile-dropdown" id="profileDropdown">
                    <a href="#"><i class="bi bi-person"></i> My Profile</a>
                    <a href="#"><i class="bi bi-envelope"></i> Inbox</a>
                    <a href="#"><i class="bi bi-gear"></i> Settings</a>
                    <a href="@Url.Action("Login", "Home")"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="page-body">
            @RenderBody()
        </div>

        <!-- Footer -->
        <div class="footer">
            @*             <p><strong>&copy; 2025 iConnectTechSolutions.</strong></p>
 *@            <p><strong>&copy; 2025 NewZenIT.</strong></p>

        </div>
    </div>

    <!-- JS Links -->
    <script src="~/js/FederationLayout.js"></script>
</body>
</html>